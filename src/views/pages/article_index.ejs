<div class="row">
    <div class="col-xl-3">
        <select name="article_catalogue" class="form-control">
            <option value="-1">Tất cả</option>
            <%pageData[1].forEach((department,index)=>{%>
            <option value="<%=department.id%>"><%=department.department_name%></option>
            <%})%>
        </select>
    </div>
    <div class="col-xl-12">
        <%- include ('../message/messagebox') -%>
        <div class="card easion-card">
            <div class="card-header">
                <div class="easion-card-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="easion-card-title">Quản lí bài viết</div>
            </div>
            <div class="p-3">
                <table id="example" class="table table-border" style="width:100%">
                    <thead class="table-primary">
                        <tr>
                            <th>ID</th>
                            <th>Chuyên mục</th>
                            <th>Tựa đề</th>
                            <th>Tác giả</th>
                            <th>Lượt xem</th>
                            <th>Trạng thái</th>
                            <th>Tình trạng</th>
                            <th>Cập nhật lần cuối</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pageData[0].forEach((article,index)=>{ %>
                            <tr>
                                <td>
                                    <%= article.id%>
                                </td>
                                <td>
                                    <%= article.catalogue.catalogue_name%>
                                </td>
                                <td>
                                    <%= article.article_heading%>
                                </td>
                                <td>
                                    <%= article.User.user_name%>
                                </td>
                                <td>
                                    <%= article.article_view%>
                                </td>
                                <% if(article.article_status==1){%>
                                    <td class="text-success">Đang sử dụng</td>
                                <% }else{%>
                                    <td class="text-danger">Vô hiệu hóa</td>
                                <%}%>
                                <% if(article.article_censor==1){%>
                                    <td class="text-success">Chưa duyệt</td>
                                <% }else{%>
                                    <td class="text-danger">Đã duyệt</td>
                                <%}%>
                                <td>
                                    <%= article.updatedAt.getDate()%>/<%= article.updatedAt.getMonth()%>/<%= article.updatedAt.getFullYear()%> -<%= 
                                    article.updatedAt.getHours()%>:<%= article.updatedAt.getMinutes()%>:<%= article.updatedAt.getSeconds()%>
                                </td>
                                <td>
                                    <a class="btn btn-success text-white" title="Cập nhật bài viết">
                                        <i class="fas fa-edit"></i></a>
                                    <a class="btn btn-danger text-white" title="Xóa bài viết" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                    data-id="<%= article.id %>">
                                        <i class="fas fa-times"></i></a>
                                </td>
                            </tr>
                            <%});%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('../modal/deleteModal') -%>