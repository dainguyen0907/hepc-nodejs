<div class="row">
    <div class="col-xl-3">
        <a href="/" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#createCatalogueModal">Thêm chuyên mục mới</a>
    </div>
    <div class="col-xl-12">
        <%- include ('../message/messagebox') -%>
        <div class="card easion-card">
            <div class="card-header">
                <div class="easion-card-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="easion-card-title">Quản trị chuyên mục</div>
            </div>
            <div class="p-3">
                <table id="example" class="table table-border" style="width:100%">
                    <thead class="table-primary">
                        <tr>
                            <th>ID</th>
                            <th>Phòng ban</th>
                            <th>Tên chuyên mục</th>
                            <th>Trạng thái</th>
                            <th>Cập nhật lần cuối</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pageData[0].forEach((catalogue,index)=>{ %>
                            <tr>
                                <td>
                                    <%= catalogue.id%>
                                </td>
                                <td>
                                    <%= catalogue.Department.department_name%>
                                </td>
                                <td>
                                    <%= catalogue.catalogue_name%>
                                </td>
                                
                                <% if(catalogue.catalogue_status==1){%>
                                    <td class="text-success">Đang sử dụng</td>
                                <% }else{%>
                                    <td class="text-danger">Vô hiệu hóa</td>
                                <%}%>
                                <td>
                                    <%= catalogue.updatedAt.getDate()%>/<%= catalogue.updatedAt.getMonth()%>/<%= catalogue.updatedAt.getFullYear()%> -<%= 
                                    catalogue.updatedAt.getHours()%>:<%= catalogue.updatedAt.getMinutes()%>:<%= catalogue.updatedAt.getSeconds()%>
                                </td>
                                <td>
                                    <a class="btn btn-success text-white" title="Cập nhật catalogue" data-bs-toggle="modal" data-bs-target="#updateCatalogueModal"
                                    data-id="<%= catalogue.id %>" data-name="<%= catalogue.catalogue_name %>" 
                                    data-department="<%= catalogue.Department.id %>" data-status="<%= catalogue.catalogue_status %>">
                                        <i class="fas fa-edit"></i></a>
                                    <a class="btn btn-danger text-white" title="Xóa phòng ban" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                    data-id="<%= catalogue.id %>">
                                        <i class="fas fa-times"></i></a>
                                </td>
                            </tr>
                            <%});%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('../modal/catalogue_create') -%>
<%- include('../modal/catalogue_update') -%>
<%- include('../modal/deleteModal') -%>