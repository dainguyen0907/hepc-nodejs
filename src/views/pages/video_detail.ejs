<div class="container-fluid">
    <%- include ('../message/messagebox') -%>
    <div class="row">
        <div class="col-xl-12">
            <div class="card easion-card">
                <div class="card-header">
                    <div class="easion-card-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="easion-card-title"> Thông tin video</div>
                </div>
                <div class="p-3">
                    <form action="/video/update" method="post" >
                        <div class="form-row">
                            <input type="hidden" name="id" value="<%=pageData[0].id%>">
                            <div class="form-group col-md-12">
                                <label>Tên video</label>
                                <input name="video_name" type="text" class="form-control" placeholder="Nhập tên video" value="<%= pageData[0].video_name %>"
                                    required>
                            </div>
                            <div class="form-group col-md-12">
                                <label>Mã nhúng</label>
                                <textarea name="video_content" class="form-control" cols="30" rows="10"><%=pageData[0].video_content%></textarea>
                            </div>
                            <div class="form-group col-md-12">
                                <label> Trạng thái</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="video_status" value="1" 
                                    <% if(pageData[0].video_status==1) {%> checked<%}%>>
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Đang hoạt động
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="video_status" value="0"
                                    <% if(pageData[0].video_status==0) {%> checked<%}%>>
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        Vô hiệu hóa
                                    </label>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">Cập nhật</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>