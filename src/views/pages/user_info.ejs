<div class="container-fluid">
    <%- include ('../message/messagebox') -%>
    <div class="row">
        <div class="col-xl-12">
            <div class="card easion-card">
                <div class="card-header">
                    <div class="easion-card-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="easion-card-title"> Thông tin tài khoản</div>
                </div>
                <div class="p-3">
                    <form action="/info/update" method="post" >
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Email</label>
                                <input name="email_user" type="email" class="form-control" placeholder="Nhập email" value="<%= pageData.user_email %>"
                                    required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Tên người dùng</label>
                                <input name="name_user" type="text" class="form-control" value="<%= pageData.user_name %>"
                                    placeholder="Nhập tên người dùng" >
                            </div>
                            <div class="form-group col-md-6">
                                <label>Địa chỉ</label>
                                <input name="address_user" type="text" class="form-control" value="<%= pageData.user_address %>"
                                    placeholder="Nhập địa chỉ">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Giới tính</label>
                                <select name="gender_user" class="form-select" aria-label="Default select example">
                                    <option value="0" <% if(pageData.user_gender==0) {%> selected<%}%>>Nữ</option>
                                    <option value="1" <% if(pageData.user_gender==1) {%> selected<%}%>>Nam</option>
                                </select>
                            </div>

                            <div class="form-group col-md-6">
                                <label>Ngày sinh</label>
                                <input name="birthday_user" type="date" class="form-control" placeholder="Ngày sinh" value="<%= pageData.user_dob %>">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Quyền</label>
                                <input type="text" class="form-control" value="<%= pageData.Role.role_name %>" disabled>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Phòng ban</label>
                                <input type="text" class="form-control" value="<%= pageData.Department.department_name %>" disabled>
                                    
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label> Trạng thái</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="status_user" value="1" 
                                    <% if(pageData.user_status==1) {%> checked<%}%>>
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Đang hoạt động
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="status_user" value="0"
                                    <% if(pageData.user_status==0) {%> checked<%}%>>
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        Vô hiệu hóa
                                    </label>
                                </div>
                            </div>
                            
                        </div>
                        <button type="submit" class="btn btn-success">Cập nhật</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>