<div class="container-fluid">
    <%- include ('../message/messagebox') -%>
    <div class="row">
        <div class="col-xl-12">
            <div class="card easion-card">
                <div class="card-header">
                    <div class="easion-card-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="easion-card-title"> Thông tin tài khoản</div>
                </div>
                <div class="p-3">
                    <form action="<%=pageData[3]%>" method="post" >
                        <div class="form-row">
                            <input type="hidden" name="user_id" value="<%=pageData[0].id%>">
                            <div class="form-group col-md-6">
                                <label>Email</label>
                                <input name="email_user" type="email" class="form-control" placeholder="Nhập email" value="<%= pageData[0].user_email %>"
                                    required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Tên người dùng</label>
                                <input name="name_user" type="text" class="form-control" value="<%= pageData[0].user_name %>"
                                    placeholder="Nhập tên người dùng" >
                            </div>
                            <div class="form-group col-md-6">
                                <label>Địa chỉ</label>
                                <input name="address_user" type="text" class="form-control" value="<%= pageData[0].user_address %>"
                                    placeholder="Nhập địa chỉ">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Giới tính</label>
                                <select name="gender_user" class="form-select" aria-label="Default select example">
                                    <option value="0" <% if(pageData[0].user_gender==0) {%> selected<%}%>>Nữ</option>
                                    <option value="1" <% if(pageData[0].user_gender==1) {%> selected<%}%>>Nam</option>
                                </select>
                            </div>

                            <div class="form-group col-md-6">
                                <label>Ngày sinh</label>
                                <input name="birthday_user" type="date" class="form-control" placeholder="Ngày sinh" value="<%= pageData[0].user_dob %>">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Quyền</label>
                                <select name="user_role" class="form-select" <%=pageData[2]=='editUser'?'disabled':'' %>>
                                    <option value="1" <%=pageData[0].id_role==1?'selected':'' %>>
                                        Administrator
                                    </option>
                                    <option value="2" <%=pageData[0].id_role==2?'selected':'' %>>
                                        Censor
                                    </option>
                                    <option value="3" <%=pageData[0].id_role==3?'selected':'' %>>
                                        User
                                    </option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Phòng ban</label>
                                <select name="user_department" class="form-select" <%=pageData[2]=='editUser'?'disabled':'' %>>
                                    <%pageData[1].forEach((department,index)=>{%>
                                        <option value="<%= department.id%>" 
                                            <%= department.id==pageData[0].id_department?'selected':'' %>>
                                            <%= department.department_name%></option>
                                    <%});%>
                                </select>
                                    
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label> Trạng thái</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="status_user" value="1" 
                                    <% if(pageData[0].user_status==1) {%> checked<%}%>>
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Đang hoạt động
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="status_user" value="0"
                                    <% if(pageData[0].user_status==0) {%> checked<%}%>>
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        Vô hiệu hóa
                                    </label>
                                </div>
                            </div>
                            <%if(pageData[2]=='createAccount'){%>
                            <div class="form-group col-md-6">
                                <label> Mật khẩu</label>
                                <input type="text" class="form-control" name="user_password">
                            </div>
                            <%}%>
                        </div>
                        <button type="submit" class="btn btn-success">Cập nhật</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>