<div class="modal fade" id="updatePhotoModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Cập nhật hình ảnh</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="photo/update" method="POST">
                <div class="modal-body">
                    <input type="hidden" name="id" id="object_id">
                    <%if(pageData[3]=="admin"){%>
                    <div class="mb-3">
                        <label>Phòng ban</label>
                        <select name="photo_department" class="form-control" id="photo_department">
                            <%pageData[1].forEach((photo,index)=>{%>
                            <option value="<%=photo.id%>"><%=photo.department_name%></option>
                            <%});%>
                        </select>
                    </div>
                    <%}%>
                    <div class="mb-3">
                        <label>Đường dẫn ảnh</label>
                        <input type="text" class="form-control" name="photo_content" id="photo_content" required>
                    </div>
                    <div class="mb-3">
                        <label> Trạng thái</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="photo_status" value="1" id="photo_status_true">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Đang hoạt động
                                </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="photo_status" value="0" id="photo_status_false">
                                <label class="form-check-label" for="flexRadioDefault2">
                                    Vô hiệu hóa
                                </label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label> Trạng thái</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="photo_censor" value="1" id="photo_censor_true">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Đã duyệt
                                </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="photo_censor" value="0" id="photo_censor_false">
                                <label class="form-check-label" for="flexRadioDefault2">
                                    Chưa duyệt
                                </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>