<div class="modal fade" id="updatebannerModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Đăng banner mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="banner/update" method="POST">
                <input type="hidden" name="id" id="object_id">
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Đường link banner</label>
                        <input type="text" class="form-control" name="banner_content" id="banner_content" required>
                    </div>
                    <div class="mb-3">
                        <label> Trạng thái</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="banner_status" value="1"
                                id="banner_status_true">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Đang hoạt động
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="banner_status" value="0"
                                id="banner_status_false">
                            <label class="form-check-label" for="flexRadioDefault2">
                                Vô hiệu hóa
                            </label>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>