<div class="modal fade" id="updateDepartmentModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Cập nhật phòng ban</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="department/update" method="POST">
                <div class="modal-body">
                    <input type="hidden" name="id" id="object_id">
                    <div class="mb-3">
                        <label>Tên phòng ban</label>
                        <input type="text" class="form-control" name="department_name" id="department_name" required>
                    </div>
                    <div class="mb-3">
                        <label> Trạng thái</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="department_status" value="1" id="department_status_true">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Đang hoạt động
                                </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="department_status" value="0" id="department_status_false">
                                <label class="form-check-label" for="flexRadioDefault2">
                                    Vô hiệu hóa
                                </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>