<div class="modal fade" id="createvideoModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Đăng video mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="video/add" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Tên video</label>
                        <input type="text" class="form-control" name="video_name" required>
                    </div>
                    <div class="mb-3">
                        <label>Mã nhúng</label>
                        <textarea name="video_content" cols="30" rows="10" class="form-control" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Đăng</button>
                </div>
            </form>
        </div>
    </div>
</div>